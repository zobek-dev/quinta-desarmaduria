<div class="bg-cover bg-center bg-no-repeat relative h-[300px] w-full text-white" style="background-image: url({{ section.settings.image | img_url: 'master' }})">
  <div class="absolute top-0 left-0 w-full h-full" style="background: rgba(19, 32, 58, 0.35);">
    <div class="wrapper h-full flex flex-col justify-center">
      <h2 class="uppercase font-black leading-none my-4 lg:text-[30px] text-[20px] text-center">¿Quieres <strong class="text-[#FF4100]">Vender</strong> tu vehículo?</h2>
      <p class="text-[13px] lg:text-2xl text-center leading-[1.1] mb-4">Compramos tu auto chocado. ¡Recibe tu pago el mismo día!</p>
      <a href="{{ section.settings.link }}" class="btn-primary block mx-auto">Contáctanos</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Vender Home",
    "tag": "section",
    "settings":[
      {
        "type": "url",
        "id": "link",
        "label": "Link para la seccion"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Imagen para la sección"
      }
    ],
    "presets": [
      {
        "name": "Vender Home",
        "category": "home"
      }
    ]
  }
{% endschema %}